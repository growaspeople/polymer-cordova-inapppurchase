<?xml version="1.0" encoding="utf-8" ?>
<widget
  id="org.growaspeople.polymer.cordova.inapppurchase.demo"
  version="0.0.1"
  versionCode="1"
  android-versionCode="1"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
>
  <name>polymer-cordova-inapppurchase-demo</name>
  <description>This is a demo app for Polymer component of In-app purchase button</description>
  <author email="ogawa@growaspeople.org" href="http://growaspeople.org">
    Jumpei Ogawa @ GrowAsPeople
  </author>
  <content src="index.html" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <engine name="android" spec="5.1.x" />

  <plugin name="cordova-plugin-whitelist" spec="1" />
  <plugin name="cordova-plugin-inapppurchase" spec="~1.0.0" />

  <hook src="scripts/sign_info.js" type="before_build" />
  <hook src="scripts/bower_install.sh" type="before_build" />
</widget>
